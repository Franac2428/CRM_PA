@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cambiar estado cliente";
    string[] items = new string[] { "Clientes", "Cambiar Estado" };

    //Datos del controller
    var nombreCliente = ViewData["ClientName"].ToString();
    var message = ViewData["Message"].ToString();
    var idCliente = ViewData["ClientId"];
}


<div class="pt-16 lg:pl-64 pl-0 bg-white dark:bg-gray-900">
    <div class="p-4 pt-40 sm:ml-64">
        <div class="p-1">
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                    @HtmlElement.TailwindBreadCrumb(Html, items)
                </ol>
            </nav>
            <br />
            <div class="p-1">
                <div class="mt-3 grid grid-cols-12 mb-3">
                    <div class="col-span-12 lg:col-span-6">
                        <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg shadow-lg">
                            <h5 class="text-xl font-bold mb-4 dark:text-white">Cambio de Estado</h5>
                            <hr class="h-px my-2 bg-gray-400 border-0 dark:bg-gray-100">
                            <form action="/Cliente/CambiarEstadoCliente" method="POST" class="p-4 md:p-5">
                                <input type="hidden" name="id" value="@idCliente" />
                                <input type="hidden" name="inactivar" value="@((message == "inactivar") ? "true" : "false")" />

                                <p class="text-xl font-bold mb-4 dark:text-white">¿Está seguro que desea proceder a @message el cliente?</p>

                                <h1 class="text-3xl text-blue-500 font-bold mb-4 dark:text-blue-500">@nombreCliente.Replace("-", " ")</h1>

                                <div class="grid gap-4 mb-4 grid-cols-1 md:grid-cols-1">
                                    <div class="mt-4">
                                        @if (@message == "inactivar")
                                        {
                                            @HtmlElement.Button(Html, "red", "Inactivar", "", "submit", "fa-solid fa-ban", "", "")
                                        }
                                        else
                                        {
                                            @HtmlElement.Button(Html, "green", "Activar", "", "submit", "fa-solid fa-check", "", "")
                                        }

                                        @HtmlElement.ActionLink(Html, "gray", "Regresar al listado", "Index", "Cliente", "fa-solid fa-undo", "")
                                    </div>
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







