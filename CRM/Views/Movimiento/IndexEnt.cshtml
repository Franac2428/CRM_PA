@model IEnumerable<MovimientosViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Administrar Movimientos Entrada";
    string[] items = new string[] { "Movimientos", "Adm. Movimientos Entrada" };
}


<div class=" pt-16 lg:pl-64 pl-0 bg-white dark:bg-gray-900">
    <div class="p-4 pt-40 sm:ml-64">
        <div class="p-1">
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                    @HtmlElement.TailwindBreadCrumb(Html, items)
                </ol>
            </nav>
            <br />
            <div class="p-1">
                <h4 class="text-2xl font-bold dark:text-white">Administración de Movimientos</h4>
                <div class="mt-4 grid grid-cols-12 mb-3">

                    <div class="flex items-center justify-between flex-column flex-wrap md:flex-row space-y-4 md:space-y-0 pb-4 bg-white dark:bg-gray-900">
                        <div class="relative">
                            <a href="/Movimiento/AgregarEnt" class="flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-8 group hover:bg-gray-100 dark:text-white"></i>Agregar Movimiento</a>

                            @*                             @HtmlElement.ActionLink(Html,"purple", "Agregar Cliente", "AgregarCliente", "Cliente", "fa-solid fa-user-plus", "btnAddCliente")
                            *@
                        </div>
                    </div>
                    @if (TempData["SuccessAction"] != null)
                    {
                        @HtmlElement.TailwindAlert(Html, "Información", TempData["SuccessAction"].ToString(), "green", "fa-solid fa fa-check", "")
                    }

                    @if (TempData["ErrorAction"] != null)
                    {
                        @HtmlElement.TailwindAlert(Html, "Error", TempData["ErrorAction"].ToString(), "red", "fa-solid fa fa-times", "")
                    }

                    @if (ViewData["NoDataList"] != null)
                    {
                        @HtmlElement.TailwindAlert(Html, "Advertencia", ViewData["NoDataList"].ToString(), "yellow", "fa-solid fa fa-exclamation-triangle", "")
                    }

                    @if (ViewData["ErrorList"] != null)
                    {
                        @HtmlElement.TailwindAlert(Html, "Ocurrió un error", ViewData["ErrorList"].ToString(), "red", "fa-solid fa fa-times-circle", "")
                    }

                    @if (Model.Any())
                    {
                        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                            <div style="overflow:auto; max-height:30rem">
                                <!-- Agrega esta línea -->
                                <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                                    <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
                                        <tr>
                                            <th hidden scope="col" class="px-6 py-3">
                                                IdMovimiento
                                            </th>
                                            <th scope="col" class="px-6 py-3">
                                                Monto
                                            </th>
                                            <th scope="col" class="px-6 py-3">
                                                Comentario
                                            </th>
                                            <th scope="col" class="px-6 py-3">
                                                Estado Movimiento
                                            </th>
                                            <th scope="col" class="px-6 py-3">
                                                Acciones
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-gray-50 dark:bg-gray-800">
                                        @foreach (var item in Model.Where(m => m.IdTipoMovimiento == 1))
                                        {
                                            <tr>
                                                <td hidden class="px-6 py-4">
                                                    @item.IdMovimiento
                                                </td>
                                                <td class="px-6 py-4">
                                                    @item.Monto
                                                </td>
                                                <td class="px-6 py-4">
                                                    @item.Comentario
                                                </td>
                                                <td class="px-6 py-4">
                                                    @if (item.IdEstadoMovimiento == 1)
                                                    {
                                                        @HtmlElement.TailwindBadge(Html, "yellow", "", "Pendiente", "")
                                                    }
                                                    else@if (item.IdEstadoMovimiento == 2)
                                                    {
                                                        @HtmlElement.TailwindBadge(Html, "green", "", "Pagado", "")
                                                    }
                                                    else@if (item.IdEstadoMovimiento == 3)
                                                    {
                                                        @HtmlElement.TailwindBadge(Html, "red", "", "Anulado", "")
                                                    }
                                                </td>

                                                <td class="px-6 py-4">

                                                    @HtmlElement.TailwindTableButton(Html, "blue", "", "fa-solid fa-pencil", "", "btn", "Editar Movimiento", $"/Movimiento/EditarEnt/{item.IdMovimiento}")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div> <!-- Agrega esta línea -->
                        </div>
                    }


                </div>

            </div>
        </div>
    </div>
</div>
